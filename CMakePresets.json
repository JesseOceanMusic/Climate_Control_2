{
  "version": 3,
  "configurePresets": [
    {
      "name": "Release",
      "displayName": "Release",
      "binaryDir": "${sourceDir}/bin/build/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "OFF",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/build/out/install/${presetName}"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "binaryDir": "${sourceDir}/bin/build/out/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/bin/build/out/build/install/${presetName}"
      }
    }
  ]
}